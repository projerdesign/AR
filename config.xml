<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.storybox.AR"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->
	<preference name="phonegap-version" value="3.0.0" />
	<preference name="android-minSdkVersion" value="10" />
	<preference name="splash-screen-duration" value="1500"/>
	<preference name="exit-on-suspend" value="true" />
	<preference name="show-splash-screen-spinner" value="true" />
	<preference name="permissions" value="none"/>
    <name>Realidad Aumentada</name>

    <description>
        Shareapp 
    </description>

    <author href="https://storybox.mx" email="otapia@storybox.mx">
        Storybox Transmedia
    </author>
		
	<icon src="icon/android/icon-96-xhdpi.png" />
	<icon src="icon/android/icon-36-ldpi.png" gap:platform="android" gap:density="ldpi" />
	<icon src="icon/android/icon-48-mdpi.png" gap:platform="android" gap:density="mdpi" />
	<icon src="icon/android/icon-72-hdpi.png" gap:platform="android" gap:density="hdpi" />
	<icon src="icon/android/icon-96-xhdpi.png" gap:platform="android" gap:density="xhdpi" />
	
	<gap:splash src="splash/android/screen-xhdpi-portrait.png" />
	<gap:splash src="splash/android/screen-ldpi-portrait.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="splash/android/screen-mdpi-portrait.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="splash/android/screen-hdpi-portrait.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="splash/android/screen-xhdpi-portrait.png" gap:platform="android" gap:density="xhdpi" /> 	

	<preference name="android-installLocation" value="auto" />
</widget>